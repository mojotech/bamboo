{
  "Marathon": {
    "Endpoint": "http://marathon1:8080,http://marathon2:8080,http://marathon3:8080"
  },

  "Bamboo": {
    "Endpoint": "http://haproxy-ip-address:8000",
    "Zookeeper": {
      "Host": "localhost",
      "Path": "/marathon-haproxy/state",
      "ReportingDelay": 5
    }
  },

  "HAProxy": {
    "TemplatePath": "/etc/bamboo/haproxy_template.cfg",
    "OutputPath": "/etc/haproxy/haproxy.cfg",
    "ReloadCommand": "sudo systemctl reload haproxy"
  },

  "StatsD": {
    "Enabled": false,
    "Host": "localhost:8125",
    "Prefix": "bamboo.production."
  }
}
